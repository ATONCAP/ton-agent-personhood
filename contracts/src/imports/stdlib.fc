;; Standard library functions for TON smart contracts

;; Message sending
() send_raw_message(cell msg, int mode) impure asm "SENDRAWMSG";

;; Storage operations  
cell get_data() asm "c4 PUSH";
() set_data(cell c) impure asm "c4 POP";

;; Parsing helpers
(slice, slice) load_msg_addr(slice s) asm( -> 1 0) "LDMSGADDR";
(slice, int) load_grams(slice s) asm( -> 1 0) "LDGRAMS";
(slice, int) load_uint(slice s, int len) asm(s len -> 1 0) "LDUX";
(slice, int) load_int(slice s, int len) asm(s len -> 1 0) "LDIX";
(slice, cell) load_ref(slice s) asm( -> 1 0) "LDREF";
(slice, slice) load_bits(slice s, int len) asm(s len -> 1 0) "LDSLICEX";

;; Building helpers
builder store_msg_addr(builder b, slice s) asm(s b) "STSLICE";
builder store_grams(builder b, int x) asm "STGRAMS";
builder store_uint(builder b, int x, int len) asm(x b len) "STUX";
builder store_int(builder b, int x, int len) asm(x b len) "STIX";
builder store_ref(builder b, cell c) asm(c b) "STREF";
builder store_slice(builder b, slice s) asm(s b) "STSLICE";

;; Dictionary operations
(cell, int) udict_get?(cell dict, int key_len, int index) asm(index dict key_len) "DICTUGET" "NULLSWAPIFNOT";
(cell, ()) ~udict_set(cell dict, int key_len, int index, cell value) asm(value index dict key_len) "DICTUSETREF";
(cell, int) udict_delete?(cell dict, int key_len, int index) asm(index dict key_len) "DICTUDEL";

;; Utility functions
int slice_empty?(slice s) asm "SEMPTY";
int slice_bits(slice s) asm "SBITS";
int equal_slices(slice a, slice b) asm "SDEQ";
int string_hash(slice s) asm "HASHSU";
int now() asm "NOW";
cell begin_cell() asm "NEWC";
cell end_cell(builder b) asm "ENDC";
slice begin_parse(cell c) asm "CTOS";
(slice, cell) in_msg_full() asm "INCOMINGFULL";

;; Error handling
() throw(int excno) impure asm "THROW";
() throw_if(int excno, int cond) impure asm "THROWIF";
() throw_unless(int excno, int cond) impure asm "THROWIFNOT";
